.container {
  padding: 20rpx;
}

.image-section {
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.image-box {
  width: 48%;
  height: 400rpx;
  border: 2rpx solid #717171;
  border-radius: 10rpx;
  position: relative;
}

.tongue-image, .result-image {
  width: 100%;
  height: 100%;
}

.upload-btn {
  position: absolute;
  bottom: -60rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 360rpx;
  height: 80rpx;
}

.analysis-section {
  margin: 80rpx 0;
}

.analysis-item {
  display: flex;
  margin-bottom: 20rpx;
}

.analysis-label {
  width: 282rpx;
  height: 102rpx;
  line-height: 102rpx;
  text-align: center;
  background-color: #fff;
  border: 2rpx solid #717171;
  border-radius: 10rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.analysis-result {
  flex: 1;
  height: 102rpx;
  line-height: 102rpx;
  margin-left: 20rpx;
  padding: 0 20rpx;
  background-color: #fff;
  border: 2rpx solid #717171;
  border-radius: 10rpx;
}

.diagnosis-section {
  margin: 40rpx 0;
  text-align: center;
}

.diagnosis-title {
  font-size: 28rpx;
  font-weight: bold;
}

.diagnosis-result {
  display: block;
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #fff;
  border: 2rpx solid #717171;
  border-radius: 10rpx;
  min-height: 200rpx;
}

.button-section {
  display: flex;
  justify-content: center;
  gap: 40rpx;
  margin-top: 40rpx;
}

.start-btn, .back-btn {
  width: 360rpx;
  height: 80rpx;
  line-height: 80rpx;
} 