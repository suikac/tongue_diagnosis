.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 40rpx;
  background-color: #f5f5f5;
}

/* 上部图片展示区 - 复用upload页面的样式 */
.image-section {
  width: 600rpx;  /* 与upload页面保持一致的宽度 */
  height: 600rpx; /* 与upload页面保持一致的高度 */
  margin: 60rpx auto; /* 居中显示 */
  border: 4rpx dashed #999;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  background: #fff;
}

.result-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

/* 中部四宫格分析结果 */
.analysis-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  width: 100%;
  margin: 30rpx 0;
}

.grid-item {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  height: 160rpx;  /* 设置固定高度 */
  width: 100%;     /* 宽度占满格子 */
}

.grid-content {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
}

.grid-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  text-align: center;
}

.grid-value {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  text-align: center;
}

/* 下部诊断结果区域 */
.diagnosis-section {
  flex: 1;
  min-height: 20vh;  /* 确保最小高度 */
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  display: flex;
  flex-direction: column;
}

.diagnosis-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 20rpx;
}

.diagnosis-result {
  flex: 1;
  font-size: 30rpx;
  line-height: 1.6;
  color: #444;
  overflow-y: auto;
}

.button-section {
  display: flex;
  justify-content: center;
  gap: 40rpx;
  margin-top: 40rpx;
}

.start-btn, .back-btn {
  width: 360rpx;
  height: 80rpx;
  line-height: 80rpx;
} 