.container {
  position: relative;
  width: 100%;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
}

.bg-image {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.content {
  position: relative;
  z-index: 1;
}

.enter-btn {
  width: 400rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 36rpx;
  font-weight: bold;
  background: linear-gradient(#f6f7fa, #dadbde);
  color: #333;
  border: 2rpx solid #8f8f91;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.enter-btn:active {
  background: linear-gradient(#dadbde, #f6f7fa);
  transform: translateY(2rpx);
} 