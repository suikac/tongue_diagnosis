{
  "compilerOptions": {
    "strictNullChecks": true,
    "noImplicitAny": true,
    "module": "CommonJS",
    "target": "ES2020",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "strictPropertyInitialization": true,
    "lib": [
      "ES2020",
      "dom"
    ],
    "typeRoots": [
      "./typings"
    ],
    "jsx": "react"
  },
  "include": [
    "./**/*.ts"
, "miniprogram/pages/index/index.js", "miniprogram/app.js"  ],
  "exclude": [
    "node_modules"
  ]
}
